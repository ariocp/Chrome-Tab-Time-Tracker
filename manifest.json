{
  "name": "Tab Time Tracker",
  "description": "An extension to track time spent on browser tabs",
  "version": "1.0.0",
  "manifest_version": 3,

  "action": {
    "default_icon": {
      "16": "./icons/icon16.png",
      "32": "./icons/icon32.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms",
    "activeTab",
    "scripting"
  ]
}
